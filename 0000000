<!-- Firebase SDK -->
<script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore-compat.js"></script>

<script>
  const firebaseConfig = {
  apiKey: "AIzaSyDTj2n1yhr1sFmuyBZ-jUwOmx1YqAN5QjA",
  authDomain: "property-20d6d.firebaseapp.com",
  databaseURL: "https://property-20d6d-default-rtdb.firebaseio.com",
  projectId: "property-20d6d",
  storageBucket: "property-20d6d.appspot.com",
  messagingSenderId: "916859697394",
  appId: "1:916859697394:web:2a8f9ad2d62f8306dcb86b"
};


  firebase.initializeApp(firebaseConfig);
  const db = firebase.firestore();

  const approvedDiv = document.getElementById("approved");
  const notApprovedDiv = document.getElementById("notApproved");

  function showSection(id) {
    approvedDiv.style.display = "none";
    notApprovedDiv.style.display = "none";

    document.getElementById(id).style.display = "flex";
  }

  async function loadData() {
    approvedDiv.innerHTML = "";
    notApprovedDiv.innerHTML = "";

    const snap = await db.collection("sell_posts").orderBy("createdAt", "desc").get();

    snap.forEach(doc => {
      const d = doc.data();
      const id = doc.id;

      const card = document.createElement("div");
      card.className = "card";
      card.onclick = () => card.classList.toggle("expanded");

      card.innerHTML = `
        <b>${d.title || ""} - ‚Çπ${d.price || ""}</b>
        <div class="info">üè† Type: ${d.type || "-"} ‚Ä¢ ${d.bhk || "-"}</div>
        <div class="info">üìç Location: ${d.location || "-"}</div>
        <div class="info">üè¢ Property: ${d.propertyType || "-"} ‚Ä¢ Floor: ${d.floor || "-"}</div>
        <div class="info">üìê Area: ${d.houseArea || "-"} sqft ‚Ä¢ Room: ${d.roomNo || "-"}</div>
        <div class="info">üèó Building: ${d.buildingName || "-"}</div>
        <div class="info">üë§ Owner: ${d.name || "-"}</div>
        <div class="info">üìù ${d.description || "-"}</div>
        <div class="info">üìû WhatsApp: <a class="whatsapp" href="https://wa.me/91${d.whatsapp}" target="_blank">üì≤ ${d.whatsapp}</a></div>
        <div class="info">üìÖ Created: ${d.createdAt?.toDate().toLocaleString("en-IN") || "-"}</div>
        <div>
          ${(Array.isArray(d.images) && d.images.length > 0)
            ? d.images.map(url => `<img src="${url}">`).join('')
            : '<div class="info">üì∑ No image available</div>'
          }
        </div>
        <div class="btn-group">
          ${d.approved
            ? `<button class="btn deapprove" onclick="event.stopPropagation(); toggleApprove('${id}', false)">Deapprove</button>`
            : `<button class="btn approve" onclick="event.stopPropagation(); toggleApprove('${id}', true)">Approve</button>`}
          <button class="btn delete" onclick="event.stopPropagation(); deletePost('${id}')">Delete</button>
        </div>
      `;

      if (d.approved) {
        approvedDiv.appendChild(card);
      } else {
        notApprovedDiv.appendChild(card);
      }
    });

    showSection("notApproved");
  }

  async function toggleApprove(id, status) {
    await db.collection("sell_posts").doc(id).update({ approved: status });
    loadData();
  }

  async function deletePost(id) {
    if (confirm("Delete this post?")) {
      await db.collection("sell_posts").doc(id).delete();
      loadData();
    }
  }

  loadData();
</script>

