<!DOCTYPE html>
<html>
<head>
  <title>ZaraFix - Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-auth.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-database.js"></script>
  <style>
    body { font-family: sans-serif; background: #f4f4f4; padding: 20px; }
    h2 { text-align: center; color: #333; }
    #loginSection { text-align: center; margin-bottom: 20px; }
    button {
      padding: 8px 16px; border: none; border-radius: 6px;
      font-weight: bold; cursor: pointer;
    }
    #loginBtn { background: #28a745; color: white; }
    #logoutBtn { background: #dc3545; color: white; display: none; }

    .card {
      background: white; padding: 15px; margin: 10px auto;
      border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      max-width: 500px;
    }
  </style>
</head>
<body>
  <h2>🛠️ Admin Dashboard</h2>

  <div id="loginSection">
    <button id="loginBtn" onclick="login()">🔐 Login with Google</button>
    <button id="logoutBtn" onclick="logout()">🚪 Logout</button>
  </div>

  <div id="posterList"></div>

  <script>
    // 🔐 Firebase Config
    const firebaseConfig = {
      apiKey: "AIzaSyD7ZqL-PVuFdd8rMVIyW7CgHQjPRGHD2h8",
      authDomain: "zara-fix-2e35a.firebaseapp.com",
      databaseURL: "https://zara-fix-2e35a-default-rtdb.firebaseio.com",
      projectId: "zara-fix-2e35a",
      storageBucket: "zara-fix-2e35a.appspot.com",
      messagingSenderId: "636550144008",
      appId: "1:636550144008:web:a849496ad1d1557d7ab1bd"
    };
    firebase.initializeApp(firebaseConfig);

    // 🔁 Auth State
    firebase.auth().onAuthStateChanged(user => {
      const loginBtn = document.getElementById("loginBtn");
      const logoutBtn = document.getElementById("logoutBtn");

      if (user) {
        loginBtn.style.display = "none";
        logoutBtn.style.display = "inline-block";

        // ✅ Check if user is admin
        firebase.database().ref(`admins/${user.uid}`).once("value").then(snapshot => {
          if (snapshot.val() === true) {
            loadPosters();
          } else {
            alert("❌ Access Denied: Not Admin");
            firebase.auth().signOut();
          }
        });
      } else {
        loginBtn.style.display = "inline-block";
        logoutBtn.style.display = "none";
        document.getElementById("posterList").innerHTML = "";
      }
    });

    // 🔐 Login
    function login() {
      const provider = new firebase.auth.GoogleAuthProvider();
      firebase.auth().signInWithPopup(provider).catch(error => {
        alert("Login Failed");
        console.error(error);
      });
    }

    // 🚪 Logout
    function logout() {
      firebase.auth().signOut().then(() => {
        location.reload();
      });
    }

    // 📦 Load Posters
    function loadPosters() {
      const list = document.getElementById("posterList");
      firebase.database().ref("posters").once("value", snapshot => {
        list.innerHTML = "";
        if (!snapshot.exists()) {
          list.innerHTML = "<p>No posters found.</p>";
          return;
        }

        snapshot.forEach(child => {
          const p = child.val();
          const uid = child.key;
          const div = document.createElement("div");
          div.className = "card";
          div.innerHTML = `
            <h3>${p.name || "No Name"}</h3>
            <p><b>Shop:</b> ${p.shop || "N/A"}</p>
            <p><b>WhatsApp:</b> ${p.whatsapp || "N/A"}</p>
            <p><b>Wallet:</b> ₹${p.wallet || 0}</p>
            <button onclick="approvePoster('${uid}')">✅ Approve</button>
            <button onclick="rechargeWallet('${uid}')">💸 Recharge ₹100</button>
          `;
          list.appendChild(div);
        });
      });
    }

    // ✅ Approve
    function approvePoster(uid) {
      firebase.database().ref(`posters/${uid}`).update({ approved: true }).then(() => {
        alert("✅ Approved");
        loadPosters();
      });
    }

    // 💸 Recharge
    function rechargeWallet(uid) {
      const ref = firebase.database().ref(`posters/${uid}`);
      ref.once("value").then(snap => {
        const old = snap.val().wallet || 0;
        ref.update({ wallet: old + 100 }).then(() => {
          alert("💸 Recharged ₹100");
          loadPosters();
        });
      });
    }
  </script>
</body>
</html>
