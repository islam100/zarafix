  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-database.js"></script>
  <style>
    body {
      font-family: sans-serif;
      background: #f3f3f3;
      padding: 10px;
    }
    .card {
      background: #fff;
      margin-bottom: 20px;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 2px 2px 8px #aaa;
      position: relative;
    }
    .led {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      background: gray;
      position: absolute;
      top: 10px;
      right: 10px;
      animation: blink 1s infinite;
    }
    .led.approved {
      background: yellow;
    }
    @keyframes blink {
      0%, 50%, 100% { opacity: 1; }
      25%, 75% { opacity: 0; }
    }
    button {
      padding: 6px 12px;
      margin-top: 10px;
      border: none;
      border-radius: 6px;
      background-color: #4caf50;
      color: white;
      font-weight: bold;
      cursor: pointer;
    }
    button.whatsapp {
      background-color: #25D366;
    }
  </style>
