<body>
  <h2>📋 Posters</h2>
  <div id="posterList"></div>

  <script>
    // 🔐 Firebase Config
    const firebaseConfig = {
      apiKey: "AIzaSyCH17_8W_UPmPt4KqpCaV7BpN6KsA4a67E",
      authDomain: "zara-fix.firebaseapp.com",
      databaseURL: "https://zara-fix-default-rtdb.firebaseio.com",
      projectId: "zara-fix",
      storageBucket: "zara-fix.appspot.com",
      messagingSenderId: "929249947945",
      appId: "1:929249947945:web:89d67dba1b1982ebd4b1cf"
    };
    firebase.initializeApp(firebaseConfig);
    const db = firebase.database();

    const posterList = document.getElementById('posterList');

    function loadPosters() {
      db.ref("posters").once("value", snapshot => {
        posterList.innerHTML = "";
        snapshot.forEach(child => {
          const data = child.val();
          const key = child.key;
          const name = data.name || "No Name";
          const shop = data.shop || "No Shop";
          const address = data.address || "No Address";
          const whatsapp = data.whatsapp || "";
          const wallet = data.wallet || 0;

          const card = document.createElement("div");
          card.className = "card";

          const led = document.createElement("div");
          led.className = "led";

          const content = `
            <h3>${name}</h3>
            <p><b>Shop:</b> ${shop}</p>
            <p><b>Address:</b> ${address}</p>
            <p><b>Wallet:</b> ₹${wallet}</p>
          `;

          card.innerHTML = content;

          // 🔍 Check if approved
          db.ref("approved/" + key).once("value", snap => {
            const isApproved = snap.exists();

            if (isApproved) {
              led.classList.add("approved");

              const whatsappBtn = document.createElement("button");
              whatsappBtn.textContent = "📲 WhatsApp";
              whatsappBtn.className = "whatsapp";
              whatsappBtn.onclick = () => {
                if (whatsapp) {
                  window.open(`https://wa.me/91${whatsapp}`, "_blank");
                } else {
                  alert("WhatsApp number not available");
                }
              };
              card.appendChild(whatsappBtn);
            } else {
              const approveBtn = document.createElement("button");
              approveBtn.textContent = "✅ Approve";
              approveBtn.onclick = () => {
                db.ref("approved/" + key).set(true).then(() => {
                  alert("Approved!");
                  loadPosters();
                });
              };
              card.appendChild(approveBtn);
            }
            card.appendChild(led);
          });

          posterList.appendChild(card);
        });
      });
    }

    loadPosters();
  </script>
</body>
</html>
