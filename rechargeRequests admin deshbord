<body>
  <div class="top-bar">
    <h2>ğŸ” Admin Recharge Requests</h2>
    <button onclick="logout()">Logout</button>
  </div>
  <div id="requests"></div>
  <div id="pagination"></div>

<script>
  const firebaseConfig = {
    apiKey: "AIzaSyCH17_8W_UPmPt4KqpCaV7BpN6KsA4a67E",
    authDomain: "zara-fix.firebaseapp.com",
    databaseURL: "https://zara-fix-default-rtdb.firebaseio.com",
    projectId: "zara-fix",
    storageBucket: "zara-fix.appspot.com",
    messagingSenderId: "476473209200",
    appId: "1:476473209200:web:9f6efe6c32fd4248949fb5"
  };

  firebase.initializeApp(firebaseConfig);

  const adminUID = "wjbEIAEF5jWgJKb2LlfWoIv4EqO2"; // âœ… your admin UID

  firebase.auth().onAuthStateChanged(user => {
    if (!user || user.uid !== adminUID) {
      alert("Admin only access");
      window.location.href = "index.html";
      return;
    }
    loadRequests();
  });

  function logout() {
    firebase.auth().signOut().then(() => {
      window.location.href = "index.html";
    });
  }

  let allRequests = [];
  let currentPage = 1;
  const perPage = 10;

  function loadRequests() {
    firebase.database().ref("rechargeRequests").on("value", snapshot => {
      allRequests = [];
      snapshot.forEach(child => {
        let data = child.val();
        data.id = child.key;
        allRequests.push(data);
      });
      allRequests.sort((a,b) => b.timestamp - a.timestamp); // latest first
      showPage(1);
    });
  }

  function showPage(page) {
    currentPage = page;
    const start = (page - 1) * perPage;
    const end = start + perPage;
    const visible = allRequests.slice(start, end);

    document.getElementById("requests").innerHTML = visible.map(r => `
      <div class="card">
        <h4>ğŸ“ User ID: ${r.userId}</h4>
        <p>ğŸ—“ï¸ Date: ${new Date(r.timestamp).toLocaleString()}</p>
        <p>ğŸ“ WhatsApp: <a href="https://wa.me/${r.whatsapp}" target="_blank">${r.whatsapp}</a></p>
        <p>ğŸ§¾ Screenshot: <a href="${r.screenshot}" target="_blank">View</a></p>
        <p>Status: <span class="status ${r.status === 'approved' ? 'approved' : 'pending'}">${r.status}</span></p>
        ${r.status !== 'approved' ? `
          <button class="btn btn-approve" onclick="approve('${r.id}')">âœ… Approve</button>
          <button class="btn btn-reject" onclick="reject('${r.id}')">âŒ Reject</button>` : ''}
      </div>
    `).join("");

    renderPagination();
  }

  function approve(id) {
    firebase.database().ref("rechargeRequests/" + id).update({
      status: "approved"
    });
    Swal.fire("Approved", "Recharge approved.", "success");
  }

  function reject(id) {
    firebase.database().ref("rechargeRequests/" + id).remove();
    Swal.fire("Rejected", "Recharge request deleted.", "info");
  }

  function renderPagination() {
    let totalPages = Math.ceil(allRequests.length / perPage);
    let html = '';
    for (let i = 1; i <= totalPages; i++) {
      html += `<button onclick="showPage(${i})" ${i === currentPage ? 'style="background:#2196f3;color:white;"' : ''}>${i}</button>`;
    }
    document.getElementById("pagination").innerHTML = html;
  }
</script>
</body>
</html>
