<body>
  <h2>ğŸ“‹ Your Service Requests</h2>
  <div id="requestsContainer">Loading...</div>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
    import { getDatabase, ref, onValue, remove } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-database.js";
    import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-auth.js";

    const firebaseConfig = {
      apiKey: "AIzaSyD7ZqL-PVuFdd8rMVIyW7CgHQjPRGHD2h8",
      authDomain: "zara-fix-2e35a.firebaseapp.com",
      projectId: "zara-fix-2e35a",
      storageBucket: "zara-fix-2e35a.appspot.com",
      messagingSenderId: "636550144008",
      appId: "1:636550144008:web:a849496ad1d1557d7ab1bd"
    };

    const app = initializeApp(firebaseConfig);
    const db = getDatabase();
    const auth = getAuth();

    const container = document.getElementById('requestsContainer');

    onAuthStateChanged(auth, (user) => {
      if (user) {
        const userId = user.uid;
        const userRef = ref(db, 'requests/' + userId);
        onValue(userRef, (snapshot) => {
          container.innerHTML = '';
          if (snapshot.exists()) {
            const data = snapshot.val();
            Object.keys(data).forEach((key) => {
              const req = data[key];
              const card = document.createElement('div');
              card.className = 'card';

              const date = new Date(req.timestamp || Date.now());
              const dateTime = date.toLocaleString();

              card.innerHTML = `
                <strong>ğŸ‘¤ Name:</strong> ${req.name}<br>
                <strong>ğŸ“‚ Category:</strong> ${req.category}<br>
                <strong>ğŸ“ Address:</strong> ${req.address}<br>
                <strong>âš ï¸ Problem:</strong> ${req.problem}<br>
                <strong>ğŸ“… Date:</strong> ${dateTime}<br>
                <strong>ğŸ“Œ Status:</strong> ${req.status}<br><br>
              `;

              // Accepted By
              if (req.acceptedBy) {
                const acceptDiv = document.createElement('div');
                acceptDiv.className = 'accept-info';

                const accepted = Object.values(req.acceptedBy);
                acceptDiv.innerHTML = `<strong>âœ… Accepted By: ${accepted.length}</strong><br>`;
                accepted.forEach(poster => {
                  acceptDiv.innerHTML += `
                    ğŸ‘¨â€ğŸ”§ ${poster.name}<br>
                    ğŸ“ <a href="https://wa.me/91${poster.whatsapp}" target="_blank">WhatsApp</a><br>
                    ğŸ—ºï¸ <a href="https://www.google.com/maps?q=${poster.lat},${poster.lng}" target="_blank">Live Location</a><br><br>
                  `;
                });
                card.appendChild(acceptDiv);
              } else {
                card.innerHTML += `<strong>âŒ No one accepted yet</strong><br>`;
              }

              // Delete button
              const delBtn = document.createElement('button');
              delBtn.className = 'btn';
              delBtn.innerText = 'ğŸ—‘ï¸ Delete Request';
              delBtn.onclick = () => {
                if (confirm('Are you sure you want to delete this request?')) {
                  remove(ref(db, `requests/${userId}/${key}`));
                }
              };
              card.appendChild(delBtn);

              container.appendChild(card);
            });
          } else {
            container.innerHTML = 'ğŸ› ï¸ You have not submitted any requests yet.';
          }
        });
      } else {
        container.innerHTML = "ğŸ”’ Please login to see your dashboard.";
      }
    });
  </script>
