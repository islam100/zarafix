  <script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-auth-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.6.10/firebase-database-compat.js"></script>
  <script>
    const firebaseConfig = {
      apiKey: "AIzaSyD7ZqL-PVuFdd8rMVIyW7CgHQjPRGHD2h8",
      authDomain: "zara-fix-2e35a.firebaseapp.com",
      databaseURL: "https://zara-fix-2e35a-default-rtdb.firebaseio.com",
      projectId: "zara-fix-2e35a",
      storageBucket: "zara-fix-2e35a.appspot.com",
      messagingSenderId: "636550144008",
      appId: "1:636550144008:web:a849496ad1d1557d7ab1bd"
    };
    firebase.initializeApp(firebaseConfig);

    const loginSection = document.getElementById("loginSection");
    const dashboard = document.getElementById("dashboard");

    firebase.auth().onAuthStateChanged(user => {
      if (user) {
        loginSection.classList.add("hidden");
        dashboard.classList.remove("hidden");
        loadRechargeRequests();
      }
    });

    function loginWithGoogle() {
      const provider = new firebase.auth.GoogleAuthProvider();
      firebase.auth().signInWithPopup(provider).then(() => {
        loginSection.classList.add("hidden");
        dashboard.classList.remove("hidden");
        loadRechargeRequests();
      }).catch(e => alert("Login Failed: " + e.message));
    }

    function loadRechargeRequests() {
      const container = document.getElementById("rechargeContainer");
      container.innerHTML = "Loading...";

      firebase.database().ref("rechargeRequests").once("value", snapshot => {
        container.innerHTML = "";
        if (!snapshot.exists()) {
          container.innerHTML = "âŒ No Recharge Requests Found.";
          return;
        }

        snapshot.forEach(child => {
          const data = child.val();
          const card = document.createElement("div");
          card.className = "card";
          card.innerHTML = `
            <strong>ğŸ§‘ Name:</strong> ${data.name || "N/A"}<br>
            <strong>ğŸ“ WhatsApp:</strong> ${data.whatsapp || "N/A"}<br>
            <strong>ğŸª™ Amount:</strong> â‚¹100<br>
            <strong>ğŸ•’ Date:</strong> ${new Date(data.timestamp || Date.now()).toLocaleString()}<br>
            <strong>ğŸ–¼ï¸ Screenshot:</strong><br>
            <img src="${data.screenshot}" width="100%" style="max-width:300px"><br>
            <strong>âœ… Status:</strong> ${data.recharged ? "Done" : "Pending"}
          `;
          container.appendChild(card);
        });
      });
    }
  </script>
