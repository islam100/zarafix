firebase.initializeApp(firebaseConfig);
const auth=firebase.auth();
const db=firebase.database();

const logoutBtn=document.getElementById("logoutBtn");
const postTable=document.getElementById("postTable");

logoutBtn.onclick=()=>auth.signOut();

auth.onAuthStateChanged(u=>{
  if(!u || u.email!=="zarasamajiksevasanstha@gmail.com"){
    alert("Access denied! Admin only.");
    window.location.href="index.html"; // back to user site
  } else {
    loadPosts();
  }
});

// Load posts (Pending first, then Approved, then Rejected)
function loadPosts(){
  db.ref("posts").orderByChild("created").on("value",snap=>{
    postTable.innerHTML="";
    const arr=[];
    snap.forEach(ch=>arr.push({...ch.val(), id:ch.key}));
    
    // sort: pending first
    arr.sort((a,b)=>{
      if(a.status==="pending" && b.status!=="pending") return -1;
      if(b.status==="pending" && a.status!=="pending") return 1;
      return b.created - a.created; // latest first
    });

    arr.forEach(p=>{
      const tr=document.createElement("tr");
      if(p.status==="pending") tr.classList.add("pending");
      if(p.status==="rejected") tr.classList.add("rejected");

      tr.innerHTML=`
        <td>${p.propertyType||""}</td>
        <td>${p.bhk||""}</td>
        <td>‚Çπ${p.price||""}</td>
        <td>${p.address||""}</td>
        <td>${p.posterName||""} (${p.posterType||""})</td>
        <td>${p.posterPhone||""}</td>
        <td class="status">${p.status||""}</td>
        <td>
          <button class="approveBtn">Approve</button>
          <button class="rejectBtn">Reject</button>
          <button class="deleteBtn">Delete</button>
        </td>
      `;

      const approveBtn=tr.querySelector(".approveBtn");
      approveBtn.onclick=()=>db.ref("posts/"+p.id).update({status:"approved"});
      const rejectBtn=tr.querySelector(".rejectBtn");
      rejectBtn.onclick=()=>db.ref("posts/"+p.id).update({status:"rejected"});
      const deleteBtn=tr.querySelector(".deleteBtn");
      deleteBtn.onclick=()=>{ if(confirm("Delete permanently?")) db.ref("posts/"+p.id).remove(); };

      postTable.appendChild(tr);
    });
  });
}
</script>
