  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
    import { getDatabase, ref, onValue, update } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-database.js";

   const firebaseConfig = {
  apiKey: "AIzaSyD7ZqL-PVuFdd8rMVIyW7CgHQjPRGHD2h8",
  authDomain: "zara-fix-2e35a.firebaseapp.com",
  projectId: "zara-fix-2e35a",
  storageBucket: "zara-fix-2e35a.appspot.com",
  messagingSenderId: "636550144008",
  appId: "1:636550144008:web:a849496ad1d1557d7ab1bd"
};

    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);

    const postersRef = ref(db, "posters");
    const requestsRef = ref(db, "requests");

    const currentAdminId = "wjbEIAEF5jWgJKb2LlfWoIv4EqO2"; // Replace with actual login ID

    function createCard(uid, poster) {
      const card = document.createElement("div");
      card.className = "card";
      card.innerHTML = `
        <h3>${poster.name}</h3>
        <p><strong>Shop:</strong> ${poster.shop || 'N/A'}</p>
        <p><strong>Category:</strong> ${poster.category || 'N/A'}</p>
        <p><strong>Address:</strong> ${poster.address || 'Not Available'}</p>
        <p class="wallet">Wallet: â‚¹${poster.wallet || 0}</p>
        <button class="btn rechargeBtn">Recharge â‚¹100</button>
        <button class="btn approveBtn">âœ… Approve</button>
        <a class="btn whatsappBtn" style="display:none" href="https://wa.me/${poster.whatsapp}" target="_blank">ðŸ“² WhatsApp</a>
      `;
      return card;
    }

    function renderPosters(data) {
      const list = document.getElementById("posterList");
      list.innerHTML = "";

      for (const uid in data) {
        const poster = data[uid];
        const card = createCard(uid, poster);

        // Check if approved
        onValue(ref(db, `requests/user123/request1/acceptedBy/${uid}`), snap => {
          if (snap.exists()) {
            card.classList.add("approved");
            card.querySelector(".approveBtn").style.display = "none";
            card.querySelector(".whatsappBtn").style.display = "inline-block";
          }
        });

        // Approve Button Event
        card.querySelector(".approveBtn").addEventListener("click", () => {
          const requestPath = `requests/user123/request1/acceptedBy/${uid}`;
          const payload = {
            name: poster.name,
            whatsapp: poster.whatsapp,
            timestamp: Date.now()
          };
          update(ref(db, requestPath), payload);
        });

       // Recharge Button (Instant Wallet Update)
card.querySelector(".rechargeBtn").addEventListener("click", () => {
  const walletEl = card.querySelector(".wallet");
  const currentWallet = poster.wallet || 0;
  const newAmount = currentWallet + 100;

  // Firebase à¤®à¥‡à¤‚ wallet update à¤•à¤°à¥‹
  update(ref(db, `posters/${uid}`), {
    wallet: newAmount
  })
  .then(() => {
    // UI à¤­à¥€ à¤…à¤ªà¤¡à¥‡à¤Ÿ à¤•à¤°à¥‹
    walletEl.innerText = `Wallet: â‚¹${newAmount}`;
    poster.wallet = newAmount; // Local object update à¤¤à¤¾à¤•à¤¿ double recharge à¤ªà¥‡ à¤¸à¤¹à¥€ à¤šà¤²à¥‡
    alert("Recharge successful: â‚¹100 added to wallet!");
  })
  .catch((error) => {
    alert("Recharge failed: " + error.message);
  });
});


        list.appendChild(card);
      }
    }

    onValue(postersRef, snapshot => {
      const data = snapshot.val();
      if (data) renderPosters(data);
    });
  </script>
