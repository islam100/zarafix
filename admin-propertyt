<script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-database.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-auth.js"></script>
<script>
const firebaseConfig = {
  apiKey: "AIzaSyDTj2n1yhr1sFmuyBZ-jUwOmx1YqAN5QjA",
  authDomain: "property-20d6d.firebaseapp.com",
  databaseURL: "https://property-20d6d-default-rtdb.firebaseio.com",
  projectId: "property-20d6d",
  storageBucket: "property-20d6d.appspot.com",
  messagingSenderId: "916859697394",
  appId: "1:916859697394:web:2a8f9ad2d62f8306dcb86b"
};
const imgbbKey = "cad1f0dbfbd25346460789376cc2d7d5";
firebase.initializeApp(firebaseConfig);
const db = firebase.database();
let currentUser = null;
let postsData = [];
const postsPerPage = 10;
let currentPage = 0;

function login(){
  const email = prompt('Enter email');
  const password = prompt('Enter password');
  firebase.auth().signInWithEmailAndPassword(email,password).then(res=>{
    currentUser = res.user;
    document.getElementById('loginDiv').innerHTML=`<button onclick="logout()">Logout</button>`;
    loadPosts();
  }).catch(err=>alert(err.message));
}
function logout(){
  firebase.auth().signOut();
  currentUser=null;
  document.getElementById('loginDiv').innerHTML=`<button onclick="login()">Login</button>`;
}

function loadPosts(){
  db.ref('properties').once('value').then(snap=>{
    postsData=[];
    snap.forEach(child=>postsData.push({id:child.key,...child.val()}));
    currentPage = 0;
    renderPage();
  });
}

function renderPage(){
  const container=document.getElementById('postsContainer');
  container.innerHTML='';
  let start=currentPage*postsPerPage;
  let end=start+postsPerPage;
  postsData.slice(start,end).forEach(post=>{
    let card=document.createElement('div');
    card.className='card '+(post.status!=='Approved'?'pending':'');
    card.innerHTML=`<h3>${post.title||'No Title'}</h3><p>${post.type||''} - â‚¹${post.price||0}</p><p>${post.location||''}</p>`;
    post.images?.forEach(img=>{let i=document.createElement('img'); i.src=img; i.onclick=()=>showFullscreen(img); card.appendChild(i);});
    if(post.posterWhatsApp) card.innerHTML+=`<br><button style='margin-top:5px; box-shadow:0 5px 10px rgba(0,0,0,0.3);' onclick="window.open('https://wa.me/${post.posterWhatsApp}')">ðŸ“ž WhatsApp</button>`;
    if(currentUser){
      if(currentUser.email==='zarasamajiksevasanstha@gmail.com'){
        card.innerHTML+=`<br><button style='margin-top:5px; box-shadow:0 5px 10px rgba(0,0,0,0.3);' onclick="approve('${post.id}')">Approve</button> <button style='margin-top:5px; box-shadow:0 5px 10px rgba(0,0,0,0.3);' onclick="reject('${post.id}')">Reject</button>`;
      } else if(currentUser.uid===post.posterId){
        card.innerHTML+=`<br><button style='margin-top:5px; box-shadow:0 5px 10px rgba(0,0,0,0.3);' onclick="deletePost('${post.id}')">Delete</button>`;
      }
    }
    container.appendChild(card);
  });
}

function approve(id){ db.ref('properties/'+id).update({status:'Approved'}).then(loadPosts); }
function reject(id){ db.ref('properties/'+id).update({status:'Rejected'}).then(loadPosts); }
function deletePost(id){ db.ref('properties/'+id).remove().then(loadPosts); }

function showFullscreen(src){
  let div=document.createElement('div'); div.className='fullscreen';
  let img=document.createElement('img'); img.src=src;
  div.appendChild(img);
  div.onclick=()=>div.remove();
  document.body.appendChild(div);
}

function nextPage(){ if((currentPage+1)*postsPerPage<postsData.length){currentPage++; renderPage();} }
function prevPage(){ if(currentPage>0){currentPage--; renderPage();} }
</script>
