<body>

<header>
  <h1>Zara Property Listing</h1>
  <div id="authButtons">
    <button onclick="login()">Login</button>
    <button onclick="logout()" style="display:none;">Logout</button>
  </div>
</header>

<div id="posterForm" style="display:none;">
  <h3>Post Your Property</h3>
  <input type="text" id="title" placeholder="Title" required>
  <input type="text" id="city" placeholder="City" required>
  <select id="type"><option value="sale">Sale</option><option value="rent">Rent</option></select>
  <input type="number" id="price" placeholder="Price" required>
  <textarea id="description" placeholder="Description"></textarea>
  <input type="url" id="imageUrl" placeholder="Image URL" required>
  <input type="text" id="whatsapp" placeholder="WhatsApp Number" required>
  <button onclick="postProperty()">Post Property</button>
</div>

<div class="card-container" id="propertyContainer"></div>

<!-- Modal for card view -->
<div class="modal" id="cardModal">
  <div class="modal-content" id="modalContent">
    <span style="cursor:pointer; float:right;" onclick="closeModal()">✖</span>
    <div id="modalBody"></div>
  </div>
</div>

<script>
  // Firebase config
  const firebaseConfig = {
    apiKey: "AIzaSyDTj2n1yhr1sFmuyBZ-jUwOmx1YqAN5QjA",
    authDomain: "property-20d6d.firebaseapp.com",
    databaseURL: "https://property-20d6d-default-rtdb.firebaseio.com",
    projectId: "property-20d6d",
    storageBucket: "property-20d6d.appspot.com",
    messagingSenderId: "916859697394",
    appId: "1:916859697394:web:2a8f9ad2d62f8306dcb86b"
  };
  firebase.initializeApp(firebaseConfig);
  const db = firebase.database();

  const adminEmail = "zarasamajiksevasanstha@gmail.com";
  let currentUser = null;

  function login() {
    const provider = new firebase.auth.GoogleAuthProvider();
    firebase.auth().signInWithPopup(provider);
  }

  function logout() {
    firebase.auth().signOut();
  }

  firebase.auth().onAuthStateChanged(user => {
    currentUser = user;
    if(user) {
      document.getElementById("posterForm").style.display = "block";
      document.querySelector("#authButtons button:nth-child(1)").style.display = "none";
      document.querySelector("#authButtons button:nth-child(2)").style.display = "inline-block";
    } else {
      document.getElementById("posterForm").style.display = "none";
      document.querySelector("#authButtons button:nth-child(1)").style.display = "inline-block";
      document.querySelector("#authButtons button:nth-child(2)").style.display = "none";
    }
    fetchProperties();
  });

  function postProperty() {
    if(!currentUser) return alert("Login required to post");
    const newProp = {
      title: document.getElementById("title").value,
      city: document.getElementById("city").value,
      type: document.getElementById("type").value,
      price: Number(document.getElementById("price").value),
      description: document.getElementById("description").value,
      imageUrl: document.getElementById("imageUrl").value,
      whatsapp: document.getElementById("whatsapp").value,
      userId: currentUser.uid,
      userEmail: currentUser.email,
      approved: false,
      timestamp: Date.now()
    };
    db.ref("properties").push(newProp);
    alert("Property posted. Admin approval needed.");
    document.getElementById("posterForm").reset();
  }

  function fetchProperties() {
    const container = document.getElementById("propertyContainer");
    container.innerHTML = "";
    db.ref("properties").orderByChild("timestamp").once("value", snapshot => {
      snapshot.forEach(child => {
        const prop = child.val();
        const id = child.key;
        const card = document.createElement("div");
        card.className = "card";
        card.innerHTML = `
          <img src="${prop.imageUrl}" />
          <h3>${prop.title}</h3>
          <p>${prop.city} | ${prop.type} | ₹${prop.price}</p>
          <p>${prop.description}</p>
          <a href="https://wa.me/${prop.whatsapp}" target="_blank">WhatsApp</a>
        `;
        card.onclick = () => openModal(prop);
        if(currentUser && currentUser.email === adminEmail) {
          const adminDiv = document.createElement("div");
          adminDiv.className = "admin-buttons";
          adminDiv.innerHTML = `
            <button onclick="approve('${id}')">Approve</button>
            <button onclick="remove('${id}')">Delete</button>
          `;
          card.appendChild(adminDiv);
        }
        container.appendChild(card);
      });
    });
  }

  function approve(id) {
    db.ref("properties/" + id).update({approved:true});
    fetchProperties();
  }

  function remove(id) {
    db.ref("properties/" + id).remove();
    fetchProperties();
  }

  function openModal(prop) {
    document.getElementById("modalBody").innerHTML = `
      <img src="${prop.imageUrl}" style="width:100%; border-radius:10px;">
      <h3>${prop.title}</h3>
      <p>${prop.city} | ${prop.type} | ₹${prop.price}</p>
      <p>${prop.description}</p>
      <a href="https://wa.me/${prop.whatsapp}" target="_blank">WhatsApp</a>
    `;
    document.getElementById("cardModal").style.display = "flex";
  }

  function closeModal() {
    document.getElementById("cardModal").style.display = "none";
  }

</script>

</body>
</html>
