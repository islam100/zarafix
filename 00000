<!DOCTYPE html>
<html>
<head>
  <title>🌟 ZaraFix Admin - User Requests</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body {
      background: #f0f0f0;
      font-family: Arial, sans-serif;
      padding: 10px;
    }
    .card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 20px rgba(0,0,0,0.15);
      margin: 15px 0;
      padding: 20px;
      transform: perspective(1000px) translateZ(0);
      transition: transform 0.2s;
    }
    .card:hover {
      transform: scale(1.02) rotateX(1deg);
    }
    h2 {
      text-align: center;
      margin-bottom: 20px;
    }
    button {
      margin: 5px;
      padding: 10px 15px;
      border: none;
      border-radius: 12px;
      box-shadow: 0 6px #999;
      cursor: pointer;
      font-weight: bold;
      transition: 0.3s;
    }
    .approve-btn {
      background: #4CAF50;
      color: white;
    }
    .approve-btn:hover {
      background: #45a049;
    }
    .delete-btn {
      background: #f44336;
      color: white;
    }
    .delete-btn:hover {
      background: #da190b;
    }
    .led {
      width: 15px;
      height: 15px;
      border-radius: 50%;
      display: inline-block;
      margin-right: 10px;
      background: gray;
    }
    .led.blink {
      background: yellow;
      animation: blink 1s infinite;
    }
    @keyframes blink {
      0% { opacity: 1; }
      50% { opacity: 0.1; }
      100% { opacity: 1; }
    }
  </style>
</head>
<body>
  <h2>🌟 ZaraFix Admin - User Requests</h2>
  <div id="requestsContainer"></div>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
    import { getDatabase, ref, onValue, remove, update } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-database.js";

    const firebaseConfig = {
      databaseURL: "https://zara-fix-2e35a-default-rtdb.firebaseio.com/"
    };

    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);
    const requestsRef = ref(db, 'requests');

    const container = document.getElementById('requestsContainer');

    onValue(requestsRef, snapshot => {
      container.innerHTML = "";
      const requests = snapshot.val();
      if (!requests) {
        container.innerHTML = "<p>No user requests yet.</p>";
        return;
      }

      Object.entries(requests).forEach(([userId, userRequests]) => {
        Object.entries(userRequests).forEach(([requestId, data]) => {
          const card = document.createElement("div");
          card.className = "card";

          const led = document.createElement("span");
          led.className = "led";
          if (data.status === "approved") {
            led.classList.add("blink");
          }

          const name = data.name || '';
          const cat = data.category || '';
          const prob = data.problem || '';
          const addr = data.address || '';
          const wa = data.whatsapp || '';
          const stat = data.status || 'pending';

          card.innerHTML = `
            <div>${led.outerHTML}<strong>${name}</strong></div>
            <p><strong>Category:</strong> ${cat}</p>
            <p><strong>Problem:</strong> ${prob}</p>
            <p><strong>Address:</strong> ${addr}</p>
            <p><strong>WhatsApp:</strong> ${wa}</p>
            <p><strong>Status:</strong> ${stat}</p>
          `;

          const approveBtn = document.createElement("button");
          approveBtn.textContent = "✅ Approve";
          approveBtn.className = "approve-btn";
          approveBtn.onclick = () => {
            update(ref(db, `requests/${userId}/${requestId}`), {
              status: "approved"
            });
          };

          const deleteBtn = document.createElement("button");
          deleteBtn.textContent = "🗑️ Delete";
          deleteBtn.className = "delete-btn";
          deleteBtn.onclick = () => {
            if (confirm("Are you sure you want to delete this request?")) {
              remove(ref(db, `requests/${userId}/${requestId}`));
            }
          };

          card.appendChild(approveBtn);
          card.appendChild(deleteBtn);
          container.appendChild(card);
        });
      });
    });
  </script>
</body>
</html>
