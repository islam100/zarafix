<body>

<header>ZaraFix Product Dashboard</header>

<div class="container">
  <div id="loginSection">
    <p style="text-align:center;">Please login with Google to continue</p>
    <button onclick="googleLogin()">Login with Google</button>
  </div>

  <div id="dashboard" class="hidden">
    <h2>Welcome, <span id="userName"></span></h2>
    <button onclick="logout()">Logout</button>

    <h3>Add New Product</h3>
    <input type="text" id="title" placeholder="Product Title">
    <input type="number" id="price" placeholder="Price">
    <textarea id="desc" placeholder="Description"></textarea>
    <button onclick="addProduct()">Add Product</button>

    <h3>Your Products</h3>
    <div id="productList"></div>
  </div>
</div>

<script>
  // ðŸ”¹ Firebase Config
  const firebaseConfig = {
    apiKey: "AIzaSyDTj2n1yhr1sFmuyBZ-jUwOmx1YqAN5QjA",
    authDomain: "property-20d6d.firebaseapp.com",
    databaseURL: "https://property-20d6d-default-rtdb.firebaseio.com",
    projectId: "property-20d6d",
    storageBucket: "property-20d6d.appspot.com",
    messagingSenderId: "1093343251465",
    appId: "1:1093343251465:web:xxxx"
  };

  const app = firebase.initializeApp(firebaseConfig);
  const auth = firebase.auth();
  const db = firebase.database();

  let currentUser = null;

  // ðŸ”¹ Google Login
  function googleLogin() {
    const provider = new firebase.auth.GoogleAuthProvider();
    auth.signInWithPopup(provider).then(result => {
      currentUser = result.user;
      document.getElementById("loginSection").classList.add("hidden");
      document.getElementById("dashboard").classList.remove("hidden");
      document.getElementById("userName").innerText = currentUser.displayName;
      loadProducts();
    });
  }

  // ðŸ”¹ Logout
  function logout() {
    auth.signOut().then(() => {
      currentUser = null;
      document.getElementById("loginSection").classList.remove("hidden");
      document.getElementById("dashboard").classList.add("hidden");
    });
  }

  // ðŸ”¹ Add Product
  function addProduct() {
    const title = document.getElementById("title").value;
    const price = document.getElementById("price").value;
    const desc = document.getElementById("desc").value;

    if (!title || !price || !desc) {
      alert("Please fill all fields");
      return;
    }

    const newProductRef = db.ref("products").push();
    newProductRef.set({
      userId: currentUser.uid,
      title, price, desc,
      status: "pending"
    });

    document.getElementById("title").value = "";
    document.getElementById("price").value = "";
    document.getElementById("desc").value = "";
  }

  // ðŸ”¹ Load Products
  function loadProducts() {
    db.ref("products").on("value", snapshot => {
      const products = snapshot.val();
      let html = "";
      for (let id in products) {
        const p = products[id];
        if (p.userId === currentUser.uid) {
          html += `
            <div class="product-card">
              <h4>${p.title} - â‚¹${p.price}</h4>
              <p>${p.desc}</p>
              <p class="status ${p.status}">Status: ${p.status}</p>
            </div>
          `;
        }
      }
      document.getElementById("productList").innerHTML = html || "No products yet.";
    });
  }

  // ðŸ”¹ Admin Approve/Reject (Extra for Admin Page)
  // Example: db.ref("products/" + productId).update({status: "approved"});
</script>

